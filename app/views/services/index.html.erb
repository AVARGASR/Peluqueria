
<p id="notice"><%= notice %></p>

<div style="width:50%;margin:0 auto;">

<h2>Nuestros Servicios</h2>

<div class="table">
    <table class="table table-hover text-center">
    <thead>
      <tr>
      <th> <h2>Tipo</h2></th>
      <th><h2>Descripcion</h2></th>
      <th colspan="3"></th>
      </tr>
    </thead>




  <tbody>
    <% @services.each do |service| %>
      <tr>
        <td><%= service.tipo %></td>
        <td><%= service.descripcion %></td>
        <td><%= image_tag service.cover.url(:thumb)%></td>
        <td><%= link_to 'Ver servicio', service, class:"btn btn-default" %></td>
        <% if current_user %>
        <td><%= link_to 'Editar ', edit_service_path(service) %></td>
        <td><%= link_to 'Eliminar', service, method: :delete, data: { confirm: '¿Está seguro/a?' } %></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if current_user %>
<%= link_to 'Nuevo servicio', new_service_path %>
<%end%>
</div>