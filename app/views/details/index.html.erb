<body class="fondo">

<h1>Mis registros</h1>

<div class="table">
    <table class="table table-hover text-center">
    <thead>
    <tr>
      <th>GastoMensual</th>
      <th>IngresoMensual</th>
      <th>Total<th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @details.each do |detail| %>
      <tr>
        <td><%= detail.monto %></td>
        <td><%= detail.ingreso %></td>
        <td><%= detail.ingreso - detail.monto %></td>
        <td><%= link_to 'Editar', edit_detail_path(detail), class:"btn btn-success" %></td>
        <td><%= link_to 'Eliminar', detail, class:"btn btn-success", method: :delete, data: { confirm: 'Â¿Esta seguro/a?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

