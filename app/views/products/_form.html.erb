<body class="fondo">

<%= form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>
      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="field">
    <%= f.label :nombre%><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :precio %><br>
    <%= f.number_field :precio %>
  </div>
  <div class="field">
    <%= f.label :stock %><br>
    <%= f.number_field :stock %>
  </div>
  <div class="field">
    <%= f.label :descripcion %><br>
    <%= f.text_field :descripcion %>
  </div>
  <div class="field">
    <%= f.label :category_id, "Categoria" %><br>
    <%= collection_select( :product, :category_id, Category.all, :id, :descripcion, { :multiple => false }, { :class => "my-custom-class"}) %>

    <div class="field">
   Imagen: <%= f.file_field :cover %>
   </div>
   
  </div>
  <div class="actions">
    <%= f.submit "Crear Producto" %>
  </div>
<% end %>
