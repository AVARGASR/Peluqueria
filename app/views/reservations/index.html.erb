<p id="notice"><%= notice %></p>

<h1>Listing Reservations</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Apellido</th>
      <th>Fecha</th>
      <th>Descripcion</th>
      <th colspan="3"></th>
    </tr>
  </thead>



  <tbody>
    <% @reservations.each do |reservation| %>
      <tr>
        <td><%= reservation.nombre %></td>
        <td><%= reservation.apellido %></td>
        <td><%= reservation.fecha %></td>
        <td><%= reservation.descripcion %></td>
        <td><%= link_to 'Ver Reserva', reservation %></td>
        <% if current_user %>
        <td><%= link_to 'Editar', edit_reservation_path(reservation) %></td>
        <td><%= link_to 'Eliminar', reservation, method: :delete, data: { confirm: '¿Estás seguro/a?' } %></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

